<div class="modal-dialog" role="document" id="modal-content">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">
        Edit Labels
        <small><%= @report.title %></small>
      </h4>
    </div>
    <div class="modal-body">
      <ul id="edit-labels" class="col-xs-10 offset-xs-2">
        <% @labels.each do |label| %>
          <% if @report.labels.include? label %>
            <%= render partial: 'labels/remove_label_link', locals: { report: @report, label: label } %>
          <% else %>
            <%= render partial: 'labels/add_label_link', locals: { report: @report, label: label } %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="modal-footer">
      <%= link_to 'New Label', new_report_label_path(@report), remote: true, class: 'btn btn-outline-success pull-left' %>
      <%= link_to 'Done', @report, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>
