<div class="row">
  <div class="col-xs-1" style="padding-right:0">
    <%= link_to report.reporter, class: 'profile' do %>
      <%= report.reporter.firstname[0] %>
    <% end %>
  </div>
  <div class="col-xs-12">
    <%= link_to report, class: 'report' do %>
      <small class="text-muted"><%= time_ago_in_words(report.created_at)%> ago</small>
      <h6><%= report.title %></h6>
      <p class="text-muted">
        <%= truncate(report.description, length: 85, seperator: ' ') %>
      </p>
    <% end %>
  </div>
  <div class="col-xs-1">
    <div class="dropdown text-xs-right">
      <a href="#" class="dropdown-toggle" type="button" id="report-menu-<%= report.id %>" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false"><span class="octicon octicon-three-bars"></span></a>
      <div class="dropdown-menu right" aria-labelledby="report-menu-<%= report.id %>">
        <% if report.assignee.nil? %>
          <%= link_to 'Assign to me', assign_to_me_report_path(report), method: 'put', class: 'dropdown-item' %>
        <% end %>
        <%= link_to 'Show', report, class: 'dropdown-item' %>
        <%= link_to 'Edit Labels', edit_labels_report_path(report), class: 'dropdown-item', remote: true %>
      </div>
    </div>
  </div>
</div>
<hr>
