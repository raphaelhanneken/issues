<nav class="navbar navbar-fixed-bottom navbar-light bg-faded">
  <ul class="nav navbar-nav">
    <%- if controller_name != 'sessions' %>
      <li class="nav-item"><%= link_to "Log in", new_session_path(resource_name), class: 'nav-link' %></li>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li class="nav-item"><%= link_to "Register", new_user_registration_path(), class: 'nav-link' %></li>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <li class="nav-item"><%= link_to "Forgot your password?", new_password_path(resource_name), class: 'nav-link' %></li>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li class="nav-item"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'nav-link' %></li>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li class="nav-item"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'nav-link' %></li>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li class="nav-item"><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'nav-link' %></li>
      <% end -%>
    <% end -%>
  </ul>
</nav>