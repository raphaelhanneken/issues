<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-4 devise-form">
    <h2>Resend Unlock Instructions</h2>

    <%= minimal_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'loginform' }) do |f| %>
      <%= render 'shared/error_message', object: resource if resource.errors.any? %>
      <%= f.full_error :unlock_token %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
      <hr>
      <div class="form-actions">
        <%= f.button :submit, "Send unlock instructions", class: 'btn-primary btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
