<div class="col-xs-12 offset-xs-1 col-sm-12 offset-sm-1 col-md-8 offset-md-3 col-lg-6 offset-lg-4 card card-block">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'shared/errors', object: resource if resource.errors.any? %>

    <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :firstname, required: true %>
    <%= f.input :lastname, required: true %>
    <%= f.input :password, required: true, hint: ("Your password has to be at least #{@minimum_password_length} characters long." if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'btn-primary btn-success btn-block btn-lg' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
