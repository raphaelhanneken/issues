<div class="col-xs-12 offset-xs-1 col-sm-12 offset-sm-1 col-md-8 offset-md-3 col-lg-6 offset-lg-4 card card-block">
  <%= minimal_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'loginform' }) do |f| %>
    <%= render 'shared/error_message', object: resource if resource.errors.any? %>
    <h2>Sign in to Issues</h2>
    <div class="form-inputs">
      <%= f.input :email, autofocus: true, input_html: { class: 'input-lg' } %>
      <%= f.input :password, input_html: { class: 'input-lg' } %>
      <%= f.input :remember_me, hidden: true, value: 1, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Login", class: 'btn-block btn-lg' %>
    </div>
  <% end %>
</div>

