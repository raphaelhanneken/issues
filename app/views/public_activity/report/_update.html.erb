<% unless activity.owner.nil? || activity.trackable.nil? %>
  <div class="row">
    <div class="col-xs-1">
      <span class="mega-octicon octicon-sync text-muted"></span>
    </div>
    <div class="col-xs-13" style="padding-left:0">
      <small class="text-muted"><%= time_ago_in_words(activity.created_at) %> ago.</small>
      <p>
        <%= link_to activity.owner.firstname + ' ' + activity.owner.lastname, activity.owner %> updated
        <%= link_to activity.trackable.title, activity.trackable %>
      </p>
    </div>
  </div>
  <hr>
<% end %>
