<% unless activity.owner.nil? || activity.parameters.nil? %>
  <div class="row">
    <div class="col-xs-1 text-xs-right">
      <span class="octicon octicon-tag text-muted"></span>
    </div>
    <div class="col-xs-13" style="padding-left:0">
      <small class="text-muted">
        <%= link_to activity.owner.name, activity.owner %> created Label
        <span class="label" style="background-color:<%= activity.parameters[:color] %>">
          <i class="octicon octicon-tag"></i>
          <%= activity.parameters[:title] %>
        </span>
        <%= time_ago_in_words(activity.created_at) %> ago.
      </small>
    </div>
  </div>
  <hr>
<% end %>
